<%= form_with model: @article, local: true do |f| %>

<h1>Articles</h1>

<p>
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</p>

<p>
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :body %><br/>
  <%= f.text_field :body %>
</p>

<p>
  <%= f.submit 'Save' %>
</p>

<% end %>

<%= link_to 'Back', articles_path %>
