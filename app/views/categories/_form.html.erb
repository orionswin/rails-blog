<%= form_with(model: category) do |form| %>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, value: category.title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, value: category.description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  <% end %>
