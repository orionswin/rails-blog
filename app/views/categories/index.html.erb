<h1>Categories</h1>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Description</th>
		</tr>

	</thead>

	<tbody>
		<% @categories.each do |category| %>
			<tr>
			<td><%= category.id %></td>
			<td><%= link_to "#{category.title}", "/categories/#{category.id}" %></td>
			<td><%= category.description %></td>
			
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New category', new_category_path %>
