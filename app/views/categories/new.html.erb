<%= form_with model: @category, local: true do |f| %>

<h1>New Category</h1>

<p>
  <% if @category.errors.any? %>
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</p>

<p>
  <%= f.label :title %><br/>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %><br/>
  <%= f.text_field :description %>
</p>

<p>
  <%= f.submit 'Save' %>
</p>

<% end %>

<%= link_to 'Back', categories_path %>
